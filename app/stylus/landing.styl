@import "base/_global"

.game__inner
  height 100vh
  display grid
  grid-template-rows 1fr auto
  overflow-x hidden

.game__wrapper
  max-width 830px
  margin 0 auto
  padding 0 15px

.game__main-inner
  position relative
  z-index 20

.game__logo
  text-align center
  margin-bottom 30px
  padding-top 40px
  user-select none

  &-link
    width 300px

  &-img
    width 100%

.game__main
  display flex
  width 820px
  height 890px
  background-image url("../img/game-bg.png")
  background-repeat no-repeat
  background-size contain
  margin-bottom -170px

  &-inner
    margin auto
    display flex
    flex-wrap wrap
    justify-content center
    gap 15px 80px
    width 560px
    height 540px
    padding-bottom 80px

  &-button
    width 120px
    height 120px
    transition transform 0.3s
    outline none
    background-image url("../img/coins/coin.png")
    background-repeat no-repeat
    background-size contain
    background-position center
    animation coinsPulsation 1s linear infinite alternate

    &.coin-try-more
      background-image url("../img/coins/coin-try-more.png")

    &.coin-luck
      background-image url("../img/coins/coin-luck.png")

    &.coin-crown
      background-image url("../img/coins/coin-crown.png")

    &:hover
      transform scale(0.97)

    &:disabled
      cursor default

      &:hover
        transform none

.game__info
  grid-row-start 2
  grid-row-end 3
  position relative
  padding-bottom 20px
  background linear-gradient(180deg, rgba(43, 29, 19, 0) 0%, rgba(43, 29, 19, 0.32) 14.76%, rgba(43, 26, 13, 0.59) 38.72%, #150F0A 100%)
  z-index 10

.game__sloterra
  position absolute
  right 0
  bottom 0
  z-index 9
  user-select none

  img
    width 100%

.game__partners
  position relative
  text-align center
  max-width 810px
  margin 0 auto 20px
  padding 0 15px
  user-select none
  z-index 10

.game__copyright
  position relative
  font-size 10px
  line-height 1.3
  font-weight 300
  color white
  max-width 830px
  margin 0 auto
  padding 0 15px
  z-index 10

@import "media/_media-landing.styl"